include partials/mixins.pug
doctype html
html
	head
		meta( charset="utf-8" )
		meta( name="viewport", content="initial-scale=1.0, width=device-width, shrink-to-fit=no" )
		link( rel="shortcut icon" href="/imgs/favicon.ico" )
		block title
			if title
				title #{ title } &mdash; Checkout
			else
				title Checkout
		block head
			block css
				link( rel="stylesheet", href="/css/bootstrap.min.css" )
				link( rel="stylesheet", href="/css/style.css" )
				link( rel="stylesheet", href="/css/solid.min.css" )
				link( rel="stylesheet", href="/css/all.min.css" )
			block js
				script( src="/js/jquery.js" )
				script( src="/js/bootstrap.min.js" )
				script( src="/js/clipboard.min.js" )
				script( src="/js/script.js" )
	body( class=( dev ? 'dev' : '' ) )
		block navbar
			include partials/navbar.pug
		div( class=(wide?"container-fluid":"container"))
			.row
				.col-12
					block header
						h2=heading
				block flash
					.col-12
						include partials/flash.pug
				.col-12
					block contents
				block footer
					.col-12
						hr
					.col-9
						small.text-muted Checkout &mdash;
							|  
							a.text-muted( href="https://github.com/creativetechnologylab/checkout", target="_blank" ) Contribute on GitHub
					.col-3
						p.text-right: small: a.text-muted( href=`https://github.com/creativetechnologylab/checkout/commit/${git}`, target="_blank" )=git
