extends ../../../src/views/base.pug

block prepend title
	- title = 'Shortcuts'
	- breadcrumb.push({name: title})

block contents
	p There are a number of shortcuts built into #{Options.get('application_name')}, the following are applicable to your user role.
	h3 Global Shortcuts
	ul
		if currentUserCan('global_search')
			li #[kbd Alt] + #[kbd Shift] + #[kbd F] – Will open global search at the top
				br
				| When open users can use the up/down arrows to nagivate, enter to select, escape to close the menu
		if currentUserCan({or: ['checkout_issue', 'items_return', 'users_create', 'print', 'checkout_audit', 'checkout_history']})
			li #[kbd Alt] + #[kbd Shift] + #[kbd K] – Will go to the Kiosk
		li #[kbd Alt] + #[kbd Shift] + #[kbd Q] – Will move the text input to quick search if the page has one
	if currentUserCan({or: ['checkout_issue', 'items_return', 'users_create', 'print', 'checkout_audit', 'checkout_history']})
		h3 Kiosk Shortcuts
		ul
			li #[kbd Escape] – Will highlight the scanning field when on the kiosk screen		
			if currentUserCan('checkout_issue')
				li #[kbd Alt] + #[kbd Shift] + #[kbd I] – Opens the Issue tab
			if currentUserCan('items_return')
				li #[kbd Alt] + #[kbd Shift] + #[kbd R] – Opens the Return tab
			if currentUserCan('users_create')
				li #[kbd Alt] + #[kbd Shift] + #[kbd N] – Opens the New User tab
			if currentUserCan('print')
				li #[kbd Alt] + #[kbd Shift] + #[kbd L] – Opens the Label tab
			if currentUserCan('checkout_audit')
				li #[kbd Alt] + #[kbd Shift] + #[kbd A] – Opens the Audit tab 
			if currentUserCan('checkout_history')
				li #[kbd Alt] + #[kbd Shift] + #[kbd H] – Opens the History tab 
