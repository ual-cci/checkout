form( method="get" )#filter
	input( type="hidden", name="sortby", value=sortby )
	input( type="hidden", name="direction", value=direction )
	.form-group.row.collapse#statusFilter(class=(selected.status?'show':''))
		label( for="status" ).col-sm-2 Status
		.col-md-5.col-sm-9
			select( name="status" )#status.form-control.form-select.form-select-sm
				option( value="", selected )
				option(disabled) ──────────
				option( value='active', selected=( selected.status == 'active' ) ) Active
				option( value='disabled', selected=( selected.status == 'disabled' ) ) Disabled
	.form-group.row.collapse#roleFilter(class=(selected.role?'show':''))
		label( for="role" ).col-sm-2 Role
		.col-md-5.col-sm-9
			select( name="role" )#group.form-control.form-select.form-select-sm
				option( value="", selected )
				option(disabled) ──────────
				for role in roles
					option( value=role.id, selected=( role.id == selected.role ) ) #{ role.name }
	.form-group.row.collapse#courseFilter(class=(selected.course?'show':''))
		label( for="course" ).col-sm-2 Course
		.col-md-5.col-sm-9
			select( name="course" )#group.form-control.form-select.form-select-sm
				option( value="", selected )
				option(disabled) ──────────
				for course in courses
					option( value=course.id, selected=( course.id == selected.course ) ) #{ course.name }
	.form-group.row.collapse#yearFilter(class=(selected.year?'show':''))
		label( for="year" ).col-sm-2 Year
		.col-md-5.col-sm-9
			select( name="year" )#year.form-control.form-select.form-select-sm
				option( value="", selected )
				option(disabled) ──────────
				for year in years
					option( value=year.id, selected=( year.id == selected.year ) ) #{ year.name }