extends ../../../src/views/base.pug

block prepend title
	- title = "Login"

block navbar

block header

block footer
	
block flash

block append css
	link(rel="stylesheet", type="text/css", href="/css/login.css")

block contents
	.col-12.text-center
		form( method="post", action="/login" ).form-signin
			img( src="/imgs/logo.svg" width="128" height="128" ).mb-2
			h1.mb-0 Checkout
			p.mt-0.mb-3: small: a.text-muted(href=`https://github.com/creativetechnologylab/checkout/commit/${git}`, target="_blank")=git
			include ../../../src/views/partials/flash.pug
			label(for="username").sr-only Username
			input(type="username" name="username" placeholder="Username" autofocus required)#username.form-control
			label(for="password").sr-only Username
			input(type="password" name="password" placeholder="Password"  required)#password.form-control
			button( type="submit").btn.btn-lg.btn-outline-dark.btn-block Login
