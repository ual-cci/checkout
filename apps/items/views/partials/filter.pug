form(method="get")#filter
	input(type="hidden" name="sortby" value=sortby)
	input(type="hidden" name="direction" value=direction)

	.form-group.row.collapse.mb-1#groupFilter(class=(selected.group?'show':''))
		label(for="groups").col-sm-2 Group
		.col-md-5.col-sm-9
			select#group(name="group").form-control.form-select.form-select-sm
				option(value="" selected)
				option(disabled) ──────────
				for group in groups
					option(value=group.id selected=(group.id == selected.group)) #{ group.name }
	
	.form-group.row.collapse.mb-1#locationFilter(class=(selected.location?'show':''))
		label(for="location").col-sm-2 Location
		.col-md-5.col-sm-9
			select#location(name="location").form-control.form-select.form-select-sm
				option(value="" selected)
				option(disabled) ──────────
				for location in locations
					option(value=location.id selected=(location.id == selected.location)) #{ location.name }
	
	if courses
