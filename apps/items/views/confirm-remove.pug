extends ../../../src/views/base.pug

block prepend title
	- title = 'Remove: ' + selected.name
	- heading = "Are you sure you want to remove " + selected.name + "?"
	- menu = "items"

block contents
	form( method="post" )
		+csrf
		+messageBlock( 'dark', 'white', 'Removing this item will also delete it the historical data about actions performed against this item.', 'white' )
		.form-group
			button( type='submit' ).btn.btn-danger Yes, remove item
			|  
			a( href="/items" ).btn.btn-outline-dark Cancel
