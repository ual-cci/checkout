form( method="post" )
	+csrf
	.form-group.row
		label( for="name" ).col-lg-2.col-form-label Name
		.col-lg-4
			input( name="name" type="text" value=printer.name required autocomplete="off" )#name.form-control
	.form-group.row
		label( for="url" ).col-lg-2.col-form-label URL
		.col-lg-4
			input( name="url" type="text" value=printer.url required autocomplete="off" )#url.form-control
	.form-group.row
		.col-lg-4.offset-lg-2
			input( type="submit" value=action ).btn.btn-primary
			|  
			a( href="/printers" ).btn.btn-outline-dark Cancel
